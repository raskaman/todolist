@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section headscript
{
    <script src="~/public/js/libs/jquery.signalR-2.2.0.min.js" type="text/javascript"></script>
    <script src="~/signalr/hubs" type="text/javascript"></script>
    <script src="~/public/js/users.js" type="text/javascript"></script>
}

<div id="error" class="validation-summary-errors"></div>
<h2>Add User</h2>
<form data-bind="submit: addUser">
    <input data-bind="value: firstName" class="" placeholder="First Name" style="width: 130px; display: inline-block;" />
    <input data-bind="value: lastName" class="" placeholder="Last Name" style="width: 130px; display: inline-block;" />
    <input class="" type="submit" value="Add User" />
</form>

<h2>Users</h2>
<br />
    You have <b data-bind="text: activeUsers().length">&nbsp;</b> inactive user(s)

<ul class="users-list" data-bind="template: { name: 'userTemplate', foreach: users }, visible: users().length > 0"></ul>

<script type="text/html" id="userTemplate">
    <li data-bind="css: {disabled : !active() }">
        <input type="checkbox" data-bind="checked: active" />
        <input class="" data-bind="value: firstName" />
        <input class="" data-bind="value: lastName" />
        <input class="" type="button" href="#" data-bind="click: remove" value="x" />
    </li>
</script>